@model IEnumerable<Vidly.Models.Customer>
@{
    ViewBag.Title = "Customers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers</h2>

@*<p>
    <input type="button" class="btn btn-primary" value="Add Customer" onclick="location.href='@Url.Action("New", "Customers")'" />
</p>*@

<p>
    @Html.ActionLink("Add Customer", "New", "Customer", new { @class = "btn btn-primary"} )
</p>


@if (Model.Count() == 0) 
{
    <p>We don't have any customers yet.</p>
}
else 
{
    <br>
    <table class="table table-bordered table-hover">

        <tr>
            <th>
                Customer
            </th>
            <th>
                Membership Type
            </th>
        </tr>

       <tbody>
           @foreach (var customer in Model)
           {
               <tr>
                   <td>
                       @Html.ActionLink(customer.Name, "Edit", "Customers", new { id = customer.Id }, null)
                   </td>
                   <td>
                       @customer.MembershipType.Name
                   </td>
               </tr>
           }
       </tbody>
        
    </table>
}

